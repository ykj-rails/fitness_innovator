<% @contents.each do |content| %>
<div class="container">
    <div class="card mx-auto bg-white shadow-sm mb-4" style="width: 50%;">
    <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text">
          <% if user_signed_in? %>
            <% if current_user.id == content.user_id %>
              <%= link_to "編集する", edit_content_path(content) %>
              <% end %>
            <% end %>

          <%= link_to "詳細", content_path(content) %>
          <%= content.title %>
          <%= content.before_body_weight %>
          <%= content.before_body_weight %>Kg ➡︎
          <%= content.after_body_weight %>Kg
          <%= content.period %>
        </p>
      </div>
  </div>
</div>
<% end %>
