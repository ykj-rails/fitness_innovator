<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-12">
      <header class="header-user">
        <% if @content.user.avatar.attached? %>
          <%= link_to image_tag(@content.user.avatar, class: "user-image-icon-sm"), user_path(@content) %>
        <% else %>
          <%= link_to image_tag("rip-rich.jpg", class: "user-image-icon-sm"), user_path(@content) %>
        <% end %>
        <div class="pt-1">
          <%= link_to @content.user.nickname, user_path(@content), class: "label-font mr-5" %>
          <span class="label-font">
            期間：<span class="lead mr-3"><%= @content.period %></span>
            Before：<span class="lead"><%= @content.before_body_weight %></span>kg
            <span class="lead mx-3"><i class="fas fa-arrow-right faa-horizontal animated"></i></span>
            After：<span class="lead"><%= @content.after_body_weight %></span>kg
          </span>
        </div>
      </header>
      <div class="content-show-img">
        <%= image_tag(@content.befor_image, class: "show-preview") %>
        <%= image_tag(@content.after_image, class: "show-preview") %>
      </div>
      <div class="content-show-t">
        <span>
          <div class="title-font mb-2">
            <%= @content.title %>
            <i class="fab fa-angellist"></i>
          </div>
          <%= simple_format @content.comment %>
        </span>
      </div>
      <div class="content-show-b">
        <div class="row">
          <div class="col-6">
            <div class="label-font mb-1">
              ワークアウトルーティーン
              <i class="fas fa-running"></i>
            </div>
            <%= render @content.workouts %>
          </div>

          <div class="col-6">
            <div class="label-font mb-1">
              食事内容
              <i class="fas fa-pizza-slice"></i>
            </div>
            <%= render @content.meals %>
          </div>
        </div>

      </div>
    </div>
</div>
</div>
