<div class="container-fluid mt-5">

  <div class="row">
    <div class="col-12 col-sm-12 col-lg-12 col-xl-12">
      <header class="header-user d-flex mx-auto">
        <%= link_to image_tag(@content.user.avatar, class: "user-image-icon-sm"), user_path(@content) %>
        <div class="pt-1">
          <%= link_to @content.user.nickname, user_path(@content), class: "label-font mr-5" %>
          <span class="label-font">
            期間：<span class="lead mr-3"><%= @content.period %></span>
            Before：<span class="lead"><%= @content.before_body_weight %></span>kg
            <span class="lead mx-3"><i class="fas fa-arrow-right faa-horizontal animated"></i></span>
            After：<span class="lead"><%= @content.after_body_weight %></span>kg
          </span>
        </div>
      </header>
      <div class="content-show-img d-flex mx-auto">
        <%= image_tag(@content.befor_image, class: "show-preview") %>
        <%= image_tag(@content.after_image, class: "show-preview") %>
      </div>
      <div class="content-show d-flex mx-auto">
        <span>
          <div class="title-font mb-1">
            <%= @content.title %>
            <i class="fab fa-angellist"></i>
          </div>
          <%= simple_format @content.comment %>
        </span>
      </div>
    </div>

    <% @content.workouts.each do |workout| %>
      <%= workout.title %><br />
      <%= workout.week_id %>
      <%= simple_format workout.menu %>
    <% end %>

    <% @content.meals.each do |meal| %>
      <%= meal.title %><br />
      <%= simple_format meal.menu %>
    <% end %>


</div>
