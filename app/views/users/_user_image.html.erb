<div class="col-4">
  <% if user_image.after_image.attached? %>
    <%= link_to content_path(user_image.id), class: "user-show-img-box" do %>
      <%= image_tag(resize_m(user_image.after_image), class: "user-show-img-index") %>
    <% end %>
  <% elsif user_image.befor_image.attached? %>
    <%= link_to content_path(user_image.id), class: "user-show-img-box" do %>
      <%= image_tag(resize_m(user_image.befor_image), class: "user-show-img-index") %>
    <% end %>
  <% end %>
</div>