<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto text-center">
      <h3 class="mb-5">パスワード変更</h3>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
        <form>
          <div class="form-group col-8">
            <%= f.label :password, "新しいパスワード" %>
            <%= f.password_field :password, placeholder: "#{@minimum_password_length}文字以上で入力", autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group col-8">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "パスワードを変更する", class: "btn btn-primary mt-5 mb-4" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
