<!-- パスワード再設定送信フォーム -->
<div class="container-fluid mt-4">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="devise-border-box">
        <div class="devise-border">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
            <form>
              <div class="col-11 mx-auto">
              <h3 class="mb-4">パスワード再設定メールの送信</h3>
                <div class="form-group">
                  <%= f.label :email, class: "form-label", id: "user_email-label" do %>
                    <i class="far fa-envelope"></i>メールアドレス
                  <% end %>
                  <%= f.email_field :email, required: true, autocomplete: "email", class: "form-x" %>
                </div>
                <div class="form-group border-bottom">
                  <%= f.submit "送信する", class: "btn btn-primary btn-sm btn-block my-4" %>
                </div>
              </div>
            </form>
          <% end %>
          <%= link_to "新しいアカウントを作成", new_registration_path(resource_name), class: "link-font" %>
        </div>
        <div class="devise-border">
          <%= link_to "ログインに戻る", new_session_path(resource_name), class: "link-font" %>
        </div>
      </div>
    </div>
  </div>
</div>
