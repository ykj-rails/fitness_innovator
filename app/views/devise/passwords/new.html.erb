<!-- パスワード再設定送信フォーム -->
<div class="container-fluid mt-4">
  <div class="row justify-content-center">
    <div class="devise-border">
      <div class="col-12 text-center">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
          <form>
            <div class="form-group">
              <%= f.label :email, class: "form-font" do %>
                <i class="far fa-envelope"></i> パスワード再設定メールの送信
              <% end %>
              <%= f.email_field :email, required: true, placeholder: "メールアドレスを入力", autofocus: true,
                  autocomplete: "email", class: "form-control" %>
            </div>
            <div class="form-group border-bottom">
              <%= f.submit "送信する", class: "btn btn-primary btn-sm mt-3 mb-4" %>
            </div>
          </form>
        <% end %>
        <div class="more_link_box">
          <%= link_to "新しいアカウントを作成", new_registration_path(resource_name), class: "link-font" %>
        </div>
      </div>
    </div>
  </div>
</div>
