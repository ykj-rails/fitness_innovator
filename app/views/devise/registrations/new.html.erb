<!-- 新規登録画面 -->
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-10 col-sm-6 mx-auto text-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <form>
          <div class="form-group mb-3">
            <%= f.label :nickname, class: "form-font" do %>
              <i class="far fa-user"></i> アカウント名
            <% end %>
            <%= f.text_field :nickname, placeholder: "10文字以内で入力", autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :email, class: "form-font" do %>
              <i class="far fa-envelope"></i> メールアドレス
            <% end %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :password, class: "form-font" do %>
              <i class="fas fa-key"></i> パスワード
            <% end %>
            <%= f.password_field :password, placeholder: "#{@minimum_password_length}文字以上で入力", autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: "form-font" do %>
              <i class="fas fa-key"></i> パスワード確認
            <% end %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group border-bottom">
            <%= f.submit "新規登録する", class: "btn btn-primary btn-block my-4" %>
          </div>
          <div class="form-group">
            <%= link_to "登録確認メールが届かない場合", new_confirmation_path(resource_name), class: "link-font" %>
          </div>
        </form>
      <% end %>
      <div class="more_link_box">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
