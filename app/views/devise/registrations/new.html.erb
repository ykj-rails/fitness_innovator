<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-6 mx-auto text-center">
      <h3 class="mb-5">新規登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <form>
          <div class="form-group col-8">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, placeholder: "10文字以内で入力", autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="form-group col-8">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group col-8">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "#{@minimum_password_length}文字以上で入力", autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group col-8">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group border-bottom col-8">
            <%= f.submit "新規登録する", class: "btn btn-primary my-4" %>
          </div>
          <div class="form-group">
            <%= link_to "登録確認メールが届かない場合", new_confirmation_path(resource_name) %>
          </div>
        </form>
      <% end %>
      <div class="more_link_box">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
